<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ukstechnology.yeskirana.activity.HomeActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="170dp" />

    <!--  <ImageView
          android:id="@+id/banner"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_above="@+id/superFast"
          android:scaleType="centerCrop"
          android:src="@drawable/banner" />
  -->

    <LinearLayout
        android:id="@+id/superFast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewPager"
        android:background="#EEEEEE"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_fast_delivery_icons"
            android:gravity="left|center"
            android:text="SuperFast \n Delivery"
            android:textColor="#282828"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#d4969996" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_on_time"
            android:gravity="left|center"
            android:text="On Time \n Delivery"
            android:textColor="#282828"
            android:textSize="12sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/shopBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/superFast"
        android:gravity="center"
        android:padding="4dp"
        android:text="Shop by top Categories"
        android:textColor="#282828" />

    <LinearLayout
        android:id="@+id/lytext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopBy"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="6dp">

        <!--android:text="\u20B9"-->
        <TextView
            android:id="@+id/beverages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/ic_coke_icons"
            android:gravity="center"
            android:text="Beverages"
            android:textColor="#282828" />

        <TextView
            android:id="@+id/brandedFoods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/ic_snack_icons"
            android:gravity="center"
            android:text="Branded Foods"
            android:textColor="#282828" />

        <TextView
            android:id="@+id/personalCare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/ic_food_icons"
            android:gravity="center"
            android:text="Personal Care"
            android:textColor="#282828" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytext_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lytext"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="3"
        android:padding="6dp">

        <TextView
            android:id="@+id/fruitsVegetables"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/fruits_veg_icons"
            android:gravity="center"
            android:text="Fruits Vegetables"
            android:textColor="#282828" />

        <TextView
            android:id="@+id/groceryStaples"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/grocery_icons"
            android:gravity="center"
            android:text="Grocery Staples"
            android:textColor="#282828" />

        <TextView
            android:id="@+id/houseHold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/house_hold"
            android:gravity="center"
            android:text="House Hold"
            android:textColor="#282828" />

    </LinearLayout>


    <ImageView
        android:id="@+id/dicount"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/lytext_one"
        android:layout_margin="3dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:background="@drawable/special_discount" />

    <LinearLayout
        android:id="@+id/quality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dicount"
        android:layout_marginTop="3dp"
        android:background="#EEEEEE"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_quality"
            android:gravity="left|center"
            android:text="Toll Free \n1800 313 5800"
            android:textColor="#282828"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#d4969996" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_support_icons"
            android:gravity="left|center"
            android:text="Full \n Support"
            android:textColor="#282828"
            android:textSize="12sp" />

    </LinearLayout>
    <ImageView
        android:id="@+id/visa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/quality"
        android:layout_marginTop="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/visa_icon"
        android:contentDescription="@null" />
</RelativeLayout>
</ScrollView>