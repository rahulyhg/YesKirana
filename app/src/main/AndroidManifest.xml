<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imagingtz.yeskirana">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.imagingtz.yeskirana.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.imagingtz.yeskirana.activity.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.imagingtz.yeskirana.activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.imagingtz.yeskirana.activity.AddAddress"
            android:label="@string/title_activity_shipping_address"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.imagingtz.yeskirana.activity.ProductListDetails"
            android:label="@string/title_activity_product_list_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.imagingtz.yeskirana.activity.MyBasketActivity"
            android:label="@string/title_activity_my_basket"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.imagingtz.yeskirana.activity.PlaceOrder"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.imagingtz.yeskirana.activity.PickAnAddress"
            android:label="@string/title_activity_pick_address" />
        <activity android:name="com.imagingtz.yeskirana.activity.ThankYou" />
        <activity android:name="com.imagingtz.yeskirana.activity.TopCategories" />
        <activity
            android:name="com.imagingtz.yeskirana.activity.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.imagingtz.yeskirana.activity.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name="com.imagingtz.yeskirana.activity.MyOrder"></activity>
    </application>

</manifest>
